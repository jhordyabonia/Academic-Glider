<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5dp"
        android:alpha="0.3"
        android:background="@drawable/shadow" >

    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_8dp"
        android:layout_marginLeft="@dimen/_6dp"
        android:layout_marginRight="@dimen/_6dp"
        android:layout_marginTop="@dimen/_6dp"
        android:background="@drawable/tile"
        android:padding="@dimen/_3dp"
        android:paddingBottom="@dimen/_3dp"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp"
        android:paddingTop="@dimen/_3dp" >

        <FrameLayout
            android:id="@+id/selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="#0000ff"
            android:visibility="gone" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.0"
                    android:maxLines="2"
                    android:paddingRight="@dimen/_3dp"
                    android:text="@string/name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/textSizeTitle"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/loremipsum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_weight="0.0"
                    android:maxLines="3"
                    android:paddingRight="@dimen/_3dp"
                    android:text="@string/info_12"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#5f5f5f"
                    android:textSize="@dimen/textSizeTitle" />

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView156"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="0.0"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_3dp"
                        android:text="@string/code"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cfcfcf"
                        android:textSize="@dimen/textSizeTitle"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_3dp"
                        android:layout_weight="0.0"
                        android:maxLines="1"
                        android:text="@string/code"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cfcfcf"
                        android:textSize="@dimen/textSizeTitle" />

                    <TextView
                        android:id="@+id/textView345"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="0.0"
                        android:text="@string/credit"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cfcfcf"
                        android:textSize="@dimen/textSize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_3dp"
                        android:layout_weight="0.0"
                        android:text="@string/credit"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cfcfcf"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/textView48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="0.0"
                        android:text="@string/note"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cfcfcf"
                        android:textSize="@dimen/textSize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0"
                        android:text="@string/note"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#cfcfcf"
                        android:textSize="@dimen/textSize" />
                </TableRow>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/twotone_class_black_48"
                tools:scaleType="fitCenter" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>