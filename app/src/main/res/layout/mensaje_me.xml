<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<FrameLayout 
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingTop="@dimen/_5dp"
        android:src="@drawable/ic_bgchat_out" />
    
    <LinearLayout
        android:id="@+id/me"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_5dp"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_2dp"
        android:paddingLeft="@dimen/_2dp"
        android:paddingRight="@dimen/_2dp"
        android:paddingTop="@dimen/_2dp" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_3dp"
                android:paddingRight="@dimen/_3dp"
                android:text="Mensaje... Lorenipsum in y Lorenipsum the Lorenipsum Lorenipsum"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:background="?android:attr/activatedBackgroundIndicator"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="@dimen/_3dp"
                android:paddingRight="@dimen/_3dp"
                android:text="fecha/hora"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#c6c6c6"
                android:textSize="@dimen/_12dp"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
</LinearLayout>
