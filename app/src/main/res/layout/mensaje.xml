<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_15dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:src="@android:drawable/ic_menu_myplaces"   
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_1dp"
            android:paddingTop="@dimen/_5dp"
            android:src="@drawable/ic_bgchat" />

        <LinearLayout
            android:id="@+id/them"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@drawable/bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_2dp"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:paddingTop="@dimen/_2dp">

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Usuario: "
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/activatedBackgroundIndicator"
                    android:paddingLeft="@dimen/_3dp"
                    android:paddingRight="@dimen/_3dp"
                    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                    android:text="Mensaje... Lorenipsum in y Lorenipsum the Lorenipsum Lorenipsum :)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingLeft="@dimen/_3dp"
                    android:paddingRight="@dimen/_3dp"
                    android:text="fecha/hora"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#c6c6c6"
                    android:textSize="@dimen/text_hour_chat"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>
